{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style> 
.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; } 
.example-wrapper code { background: #F5F5F5; padding: 2px 6px; } 
.products-container { display: flex; flex-wrap: wrap; gap: 1em; } 
.product { flex: 1 1 200px; display: flex; flex-direction: column; align-items: center; margin-bottom: 1em; } 
.product img { margin-bottom: 1em; } 
</style>

<div class="example-wrapper">
    <h1>Bienvenu sur naturalia ✅</h1>

    <ul>
        {% for product in products %}
            <div><img src="https://picsum.photos/200" alt=""></div>
            <div>{{ product.nom }} - {{ product.description }} - {{ product.poids }} - {{ product.prix }} €</div>
        {% endfor %}
    </ul>
</div>



{% endblock %}
