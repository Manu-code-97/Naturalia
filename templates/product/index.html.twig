{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style> 
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; } 
</style>

            <nav class="category container d-flex">
                <div>
                    <a href="">souscat</a>
                </div>

                <div>
                    <a href="">souscat</a>
                </div>

                <div>
                    <a href="">soucat</a>
                </div>
            </nav>

            <div class="row">
            {% for produit in products %}
                <div class="col-md-3 mb-4">
                    <div class="card h-100" style="width: 100%;">
                        <img src="{{ produit.image }}" 
                             alt="Image de {{ produit.nom }}" 
                             class="card-img-top rounded" 
                             style="height: 200px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{ produit.nom }}</h5>
                            <p class="card-text text-muted">{{ produit.description }}</p>
                            <p class="card-text font-weight-bold">{{ produit.prix }} €</p>
                            <button type="button" class="btn btn-dark btn-sm w-100">
                                Ajouter au panier
                                <img src="{{ asset('/img/cart.png') }}" alt="Panier" style="width: 16px; margin-left: 5px;">
                            </button>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-muted">Aucun produit disponible dans cette catégorie.</p>
            {% endfor %}

        </div>
        


{% endblock %}
