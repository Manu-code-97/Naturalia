            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                  <!-- Button Register -->
        <button formnovalidate class="btn btn-lg btn-primary mt-3" type="submit">S'inscrire</button>
        </form>
    </div>
</article>
{% endblock %}
