<article class="container d-flex justify-content-center align-items-stretch gap-3 mt-5 mb-5">
    <!-- Bloc pour Se Connecter -->
    <div class="form-block flex-fill p-3">
        <form action="/login" method="POST" class="BlockLogInt">
            <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
            
            <!-- Email -->
            <label for="login_email">Email</label>
            <input type="email" value="{{ last_username }}" name="login_email" id="login_email" class="form-control mb-3" autocomplete="email" required autofocus>
            
            <!-- Password -->
            <label for="login_password">Mot de Passe</label>
            <input type="password" name="login_password" id="login_password" class="form-control mb-3" autocomplete="current-password" required>
            
            <!-- CSRF Token -->
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <!-- Checkbox -->
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir
                </label>
            </div>

            <!-- Button Login -->
        <button class="btn btn-lg btn-primary" name="login" type="submit">Se connecter</button>
        </form>
    </div>

