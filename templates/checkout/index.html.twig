{% extends 'base.html.twig' %}

{% block title %}Checkout{% endblock %}

{% block body %}
    <main id="panier" class="d-flex">
        <section>
            <div>
                <div>
                    <h3>Comment souhaitez-vous recevoir votre commande ?</h3>
                </div>

                <div>
                    <form action="post">
                        <div class="d-flex">
                            <div>
                                <input type="radio">
                            </div>

                            <div>
                                <input type="radio">
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <form action="">
                    <div>
                        <div class="d-flex">
                            <div>
                                <input type="text" required placeholder="Prénom">
                            </div>

                            <div>
                                <input type="text" required placeholder="Nom">
                            </div>
                        </div>

                        <div>
                            <div>
                                <input type="text" required id="address" for="address">
                            </div>
                        </div>

                        <div class="d-flex">
                            <div>
                                <input type="email" placeholder="E-mail" required for="email" id="email">
                            </div>

                            <div>
                                <input type="phone" placeholder="Numéro de téléphone" id="phone" for="phone">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <section>
        </section>
    </main>
{% endblock %}